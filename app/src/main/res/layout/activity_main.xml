<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".MainActivity"
    android:background="#BBDEFB">




    <EditText
        android:id="@+id/serverIpInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="IP do Servidor (ex: 192.168.1.10)"
        android:inputType="text"
        android:text="192.168.1.10" />



    <TextView
        android:id="@+id/IpPlaceholderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Edite se necessÃ¡rio" />



    <ImageView
        android:id="@+id/previewImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="320dp"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_camera"
        android:background="#FFFFFF" />

    <TextView
        android:id="@+id/imagePlaceholderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Toque para tirar a foto" />

</LinearLayout>